<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/action_bar_height"
    android:background="@color/colorPrimaryDark">

    <ImageButton
        android:id="@+id/iBtnBack"
        android:layout_width="@dimen/action_bar_height"
        android:layout_height="@dimen/action_bar_height"
        android:background="@null"
        android:contentDescription="@string/back_label"
        android:padding="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_back"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="1"
        android:paddingEnd="80dp"
        android:paddingStart="80dp"
        android:textColor="#ffffff"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/iBtnSearch"
        android:layout_width="@dimen/action_bar_height"
        android:layout_height="@dimen/action_bar_height"
        android:background="@null"
        android:contentDescription="@string/search_label"
        android:padding="12dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/search_white"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/iBtnRefresh"
        android:layout_width="@dimen/action_bar_height"
        android:layout_height="@dimen/action_bar_height"
        android:background="@null"
        android:contentDescription="@string/search_label"
        android:padding="12dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_refresh"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvConfirm"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/action_bar_height"
        android:gravity="center"
        android:paddingEnd="@dimen/offset_16dp"
        android:paddingStart="@dimen/offset_16dp"
        android:text="确定"
        android:textColor="#FFFFFFFF"
        android:textSize="14sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>