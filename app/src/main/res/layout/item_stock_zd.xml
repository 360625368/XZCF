<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/black"
              android:orientation="vertical"
              android:paddingEnd="@dimen/offset_10dp"
              android:paddingStart="@dimen/offset_10dp"
    >

    <LinearLayout
        android:id="@+id/ll_item_stock_zd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/offset_55dp"
        android:orientation="horizontal"

        >

        <LinearLayout
            android:id="@+id/ll_stock_zd_name"
            android:layout_width="@dimen/offset_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:gravity="center_vertical"
            android:orientation="vertical"
            >


            <TextView
                android:id="@+id/tv_item_stock_zd_name"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/offset_20dp"
                android:lines="1"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_14dp"/>

            <TextView
                android:id="@+id/tv_item_stock_zd_code"
                android:layout_width="wrap_content"
                android:layout_height="13dp"
                android:textColor="@color/stock_sort_txt"
                android:textSize="@dimen/font_size_10dp"/>


        </LinearLayout>

        <RelativeLayout
            android:id="@+id/ll_stock_zd_price"
            android:layout_width="@dimen/offset_0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            >

            <TextView
                android:id="@+id/tv_item_stock_zd_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:lines="1"
                android:textSize="@dimen/font_size_18sp"
                />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ll_stock_zd_rate"
            android:layout_width="@dimen/offset_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            >

            <TextView
                android:id="@+id/tv_item_stock_zd_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/offset_4dp"
                android:lines="1"
                android:textSize="@dimen/font_size_18sp"
                />


        </RelativeLayout>

    </LinearLayout>

</LinearLayout>