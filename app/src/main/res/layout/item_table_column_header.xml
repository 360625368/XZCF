<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/table_column_header_height"
    android:background="@color/tableColumnHeaderBgColor"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/tableColumnHeaderBgColor"
        android:gravity="center"
        android:lines="1"
        android:paddingEnd="@dimen/offset_8dp"
        android:paddingStart="@dimen/offset_8dp"
        android:textColor="@color/tableColumnHeaderTextColor"
        android:textSize="@dimen/font_size_16dp" />

</LinearLayout>