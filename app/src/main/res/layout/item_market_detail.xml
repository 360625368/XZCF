<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/offset_25dp"
        android:orientation="horizontal"
        >

        <RelativeLayout
            android:layout_width="@dimen/offset_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >

            <TextView
                android:id="@+id/tv_item_detail_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="@dimen/font_size_12sp"
                android:textColor="@color/stock_tab_txt"
                android:lines="1"
                android:ellipsize="end"
                />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="@dimen/offset_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/tv_item_detail_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="@dimen/font_size_12sp"
                android:textColor="@color/stock_tab_txt"
                android:lines="1"
                android:ellipsize="end"
                />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="@dimen/offset_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/tv_item_detail_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="@dimen/font_size_12sp"
                android:textColor="@color/stock_tab_txt"
                android:lines="1"
                android:ellipsize="end"
                />
            <TextView
                android:id="@+id/tv_item_detail_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/tv_item_detail_count"
                android:layout_centerVertical="true"
                android:textSize="@dimen/font_size_12sp"
                />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>