<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/ll_item_stock"
        android:layout_width="match_parent"
        android:layout_height="@dimen/offset_55dp"
        android:orientation="horizontal"
        android:background="@color/black"
        >

        <!--名称、代号-->
        <RelativeLayout
            android:layout_width="@dimen/offset_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/offset_10dp"
                >

                <TextView
                    android:id="@+id/tv_item_stock_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_16dp"
                    />

                <TextView
                    android:id="@+id/tv_item_stock_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_10sp"
                    android:textColor="@color/white60P"
                    />


            </LinearLayout>



        </RelativeLayout>

        <!--现价-->
        <RelativeLayout
            android:layout_width="@dimen/offset_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            >

            <TextView
                android:id="@+id/tv_item_stock_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_16sp"
                android:layout_centerInParent="true"
                android:lines="1"
                />



        </RelativeLayout>


        <!--涨跌-->
        <RelativeLayout
            android:layout_width="@dimen/offset_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            >

            <TextView
                android:id="@+id/tv_item_stock_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="@dimen/font_size_16sp"
                android:lines="1"
                />


        </RelativeLayout>

        <!--涨幅-->
        <RelativeLayout
            android:layout_width="@dimen/offset_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            >

            <RelativeLayout
                android:id="@+id/rl_item_stock_turnover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ic_customize_turnover_bg_up"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/offset_10dp"
                >

                <TextView
                    android:id="@+id/tv_item_stock_turnover"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_centerInParent="true"

                    />

            </RelativeLayout>


        </RelativeLayout>

    </LinearLayout>

    <!--分割线-->
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/offset_0.3dp"
        android:background="@color/market_speed"
        />

</LinearLayout>